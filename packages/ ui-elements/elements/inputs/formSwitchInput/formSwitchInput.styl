.form__element
  float left
  width 100%
  margin-bottom 12px
  label
    display block
    float left
    width 130px
    text-align right
    padding-right 15px
    line-height 30px
  .container
    position relative
    float left
    width calc(100% - 130px)
  input
    height 30px
    width 100%
    padding 9px
    border-radius 4px
    border 1px solid #d8dde6
    font-size 14px
    cursor pointer
    &::-webkit-input-placeholder
      color #a2afc5
    &:focus
      outline-style none
      border-color #0070d2
    &.--nonEmpty
      border-bottom-right-radius 0
      border-bottom-left-radius 0
  .input__hint
    font-size 11px
    position absolute
    right 10px
    top 9px
    color #a2afc5

.form__element
  .input__switch
    width 165px
    line-height 30px
    padding-left 10px
    position absolute
    border none
    background transparent
    cursor pointer
    z-index 1
    &.--active
      z-index 2
    &.--active:after
      border-color #0070d2
    &.-disabled
      background-color #ebebe4
    &:before
      content ''
      position absolute
      height 22px
      right 0
      top 4px
      width 1px
      background #d8dde6
    &:after
      content ''
      position absolute
      width 5px
      height 5px
      border-bottom 1px solid #a9b2c4
      border-right 1px solid #a9b2c4
      transform rotate(45deg)
      right 8px
      top 10px
  .switch__options
    z-index 1
    position absolute
    background-color white
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
    border-radius 4px
    padding 5px 0
    margin-top 5px
    margin-left -10px
    .options__item
      white-space: nowrap
      line-height 30px
      padding 0 20px
      font-size 14px
      cursor pointer
  .input__action
    padding-left 170px
.form__switchInput
  &.--reversed
    .input__switch
      right 0
      &:before
        left 0
    .input__action
      padding-left 10px
      padding-right 170px
    .input__hint
      right 175px
  .input__hint
    right 10px
