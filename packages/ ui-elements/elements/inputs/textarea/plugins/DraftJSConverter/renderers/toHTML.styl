.html-markup {
  &__image {
    margin 10px 15px

    &-tag {
      max-width 100%
      max-height calc(100vh - 100px)
    }
  }

  &__codeblock {
    display block
    line-height 1.6em
    padding 9.5px
    margin 0 0 16px
    border-radius 2px
    background-color #1d1f21
    overflow-x auto
    word-break break-all
    word-wrap break-word
    color #c5c8c6
    font-size 13px
  }

  &__codeline {
    padding 2px 4px
    border-radius 3px
    background-color rgb(252, 239, 237)
    color rgb(192, 52, 29)
  }

  &__link {
    &:hover, &:focus {
      color #7eadda !important
      outline 0
      cursor pointer
    }

    &, &:visited {
      color #5e93c5
      text-decoration none
    }

    &:active {
      color #4a7bab !important
    }
  }
}
