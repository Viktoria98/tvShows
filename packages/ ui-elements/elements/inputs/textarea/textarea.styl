.draftJSCustomBlock {
  &__image {
    max-width 100%
    max-height calc(100vh - 100px)
    padding 5px
    border 1px solid #f0f0f0
  }

  &__codeblock {
    display block
    line-height 1.6em
    padding 9.5px
    margin 16px 0
    border-radius 2px
    background-color #1d1f21
    overflow-x auto
    word-break break-all
    word-wrap break-word
    color #c5c8c6
    font-size 13px
  }
}

.draftJSCustomEntity {
  &__link {
    &:hover, &:focus {
      color #7eadda !important
      outline 0
      cursor pointer
    }

    &, &:visited {
      color #5e93c5
      text-decoration none
    }

    &:active {
      color #4a7bab !important
    }
  }
}

.Draft-centerPos {
  &-text {
    display none
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    background-color rgba(255, 255, 255, 0.7)
    z-index 100
  }

  &-textChild {
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    width 100%
    height 25px
    line-height 25px
    margin auto
    text-align center
    // font-size 20px
  }

  &-progressChild {
    position absolute
    top 0
    bottom 0
    left 0
    right 0
    margin auto
  }

  &-isOver &-text {
    display block
  }
}

.public-DraftStyleDefault-ol,
.public-DraftStyleDefault-ul {
  margin 0 !important
}

// Side Toolbar Plugin
.draftJsToolbar__wrapper__9NZgg {
  top 0 !important
  left 0 !important
  z-index 1000
  white-space initial
  transform scale(1) !important
}
.draftJsToolbar_position-absolute {
  position absolute
  z-index 1000
  transform scale(0)
}
.draftJsToolbar_position-relative {
  position absolute
}

// Inline Toolbar Plugin
.draftJsToolbar__toolbar__dNtBH {
  transform translate(-50%, -30%) scale(1) !important
}
