.form__element
  float left
  width 100%
  margin-bottom 12px
  label
    display block
    float left
    width 130px
    text-align right
    padding-right 15px
    line-height 30px
  .container
    position relative
    float left
    width calc(100% - 130px)
  input
    height 30px
    width 100%
    padding 9px
    border-radius 4px
    border 1px solid #d8dde6
    font-size 14px
    cursor pointer
    &::-webkit-input-placeholder
      color #a2afc5
    &:focus
      outline-style none
      border-color #0070d2
    &.--nonEmpty
      border-bottom-right-radius 0
      border-bottom-left-radius 0
  .input__hint
    font-size 11px
    position absolute
    right 10px
    top 9px
    color #a2afc5

.form__dropdown
  position relative
  &.--active
    .options
      z-index 2
  &:after
    content ''
    position absolute
    width 5px
    height 5px
    border-bottom 1px solid #a9b2c4
    border-right 1px solid #a9b2c4
    transform rotate(45deg)
    right 9px
    top 10px
  .input__hint
    right 25px
  .options
    z-index 1
    position fixed
    background-color white
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
    border-radius 4px
    padding 5px 0
    margin-top 5px
    &__item
      line-height 30px
      padding 0 20px
      font-size 14px
      cursor pointer
      .item__hint
        font-size 11px
        position absolute
        right 25px
        color #a2afc5
