.form__element
  float left
  width 100%
  margin-bottom 12px
  label
    display block
    float left
    width 130px
    text-align right
    padding-right 15px
    line-height 30px
  .container
    position relative
    float left
    width calc(100% - 130px)
  input
    height 30px
    width 100%
    padding 9px
    border-radius 4px
    border 1px solid #d8dde6
    font-size 14px
    cursor pointer
    &::-webkit-input-placeholder
      color #a2afc5
    &:focus
      outline-style none
      border-color #0070d2
    &.--nonEmpty
      border-bottom-right-radius 0
      border-bottom-left-radius 0
  .input__hint
    font-size 11px
    position absolute
    right 10px
    top 9px
    color #a2afc5
