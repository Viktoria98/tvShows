.form
  &__group
    display block
    margin-bottom 20px
    &.form__checkbox
      line-height 30px
      .checkbox
        line-height 16px
  &__label
    display block
    margin-bottom 7px
    &.-required:after
      content " *"
      color: red
    &__link
      label
        float left
      a
        float right
  &__input
    position relative
    width 100%
    top -2px
    line-height 16px
    padding 6px 7px
    border 1px solid #cccccc
    border-radius 4px
    box-shadow: inset 0 2px 2px rgba(26, 26, 26, 0.15)
    box-sizing border-box
  &__error
    display none
    color #db3500
    margin 3px 0 0 0
    font-size 13px
    &.-visible
      display block
  &_checkbox
    .checkbox input[type="checkbox"] + label:before
      top 3px
      left 0
  .-error
    border-color #db3500

textarea.form__input
  height 170px
  resize none
  box-sizing border-box
