.statistic
  border solid 1px #c7cace
  border-radius 6px
  padding 28px 18px
  margin-bottom 40px
  -moz-box-shadow inset 0 2px 3px 0 rgba(0,0,0,0.15)
  -webkit-box-shadow inset 0 2px 3px 0 rgba(0,0,0,0.15)
  box-shadow inset 0 2px 3px 0 rgba(0,0,0,0.15)
  &__graphs
    &.-short
      float left
      width 70%
    &__detailed
      display block
      .graphOuterContainer
        border 0
        box-shadow none
        padding 0
        .legend
          padding 0
          display flex
          > span
            font-size 18px
            margin-right 20px
            margin-top 4px
            &:first-letter
              text-transform uppercase
    &__simplified
      overflow hidden
      div.graph
        float left
        width 260px
        padding 20px
        cursor pointer
        border 1px solid transparent
        border-radius 4px
        &.-active
          border-color #ccc
          box-shadow 0 1px 3px 0 rgba(0,0,0,0.2)
          .graph__name
            color #222
        .graph__name
          text-transform uppercase
          font-family "gotham-medium"
          font-size 12px
          color #696969
          margin 0
  &__stats
    float left
    width 30%
    max-width 460px
    min-width: 250px
    height auto
    padding-left 40px
    .statsApp
      position relative
      height 100%
      padding-right 20px
    .statApp
      margin-bottom 40px
      &__name
        font-family 'gotham-medium'
        text-transform uppercase
        font-size 12px
        letter-spacing 0.7px
        margin-bottom 10px
        color #737373
      &__info
        width 100%
        line-height 30px
        border-bottom $border
        overflow hidden
        font-size 13px
        &:last-of-type
          border none
          margin-bottom 10px
        &__name
          float left
          color $gray-dark
        &__value
          float right
          font-size 14px
      &__button
        width 100%

.graphOuterContainer
  border solid 1px #c7cace
  border-radius 6px
  box-shadow inset 0 2px 3px 0 rgba(0, 0, 0, 0.2)
  padding 40px 0
  margin-bottom 25px
  .graphInnerContainer
    position relative
    top -20px

.graph
  max-width 100%
  .line
    stroke steelblue
    stroke-width 2
    fill none
    opacity 0.1
    &.enabled
      opacity 1
  .axis
    shape-rendering crispEdges
  .x.axis
    path
      display none
    text
      font-size 12px
      fill #696969
      text-transform uppercase
  .x.axis.week
      text
        text-transform capitalize
  .y.axis
    path, line
      display none
    text
      font-size 13px
      fill #696969
  .domain
    display none
  .grid
    .stroke.horizontal
      stroke #E5E5E5
      stroke-width 1px
  .dots
    .dot
      stroke steelblue
      stroke-width 15px
      stroke-opacity 0
      fill steelblue
      cursor pointer
      &:hover
        transition(.3s)
        r 5
        stroke-opacity 0.1

.graphTooltip
  display none
  pointer-events none
  &.-visible
    display block
  &__cloud
    position absolute
    padding 20px
    background #000
    border-radius 4px
    box-shadow 0 4px 12px 0 rgba(0, 0, 0, 0.4)
    color white
    z-index 99
    &:before
      content ''
      width 0
      height 0
      display block
      position absolute
      left 50%
      -webkit-transform translateX(-50%)
      -moz-transform translateX(-50%)
      transform translateX(-50%)
      border-width 10px 10px 0 10px
      border-style solid
      border-color #000 transparent transparent transparent
      bottom -10px
    &.tip-left
      &:before
        left 20% !important
    &.tip-right
      &:before
        left 80% !important
  &__date
    font-size 15px
    margin-bottom 6px
    color #cccccc
    white-space nowrap
  &__value
    font-size 18px
    white-space nowrap
    .-shifted
      display block
  &__closer
    display none
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 4
    &.-visible
      display block

//colors

$graph-blue = #207CE4
$graph-red = #DC3200
$graph-green = #377900
$graph-orange = #dd6300
$graph-purple = #db00c4

.graph .line
  &.blue
    stroke $graph-blue
  &.red
    stroke $graph-red
  &.green
    stroke $graph-green
  &.orange
    stroke $graph-orange
  &.purple
    stroke $graph-purple

.graph .dots .dot
  &.blue
    stroke $graph-blue
    fill $graph-blue
  &.red
    stroke $graph-red
    fill $graph-red
  &.green
    stroke $graph-green
    fill $graph-green
  &.orange
    stroke $graph-orange
    fill $graph-orange
  &.purple
    stroke $graph-purple
    fill $graph-purple

//legend
.legend
  padding-left 20px
  h3
    float left
    margin 0 0 0 30px
    line-height 30px
    font-size 18px
  &__button
    height 30px
    line-height 28px
    margin-right 8px
    color $gray
    padding 0 15px
    border-radius 15px
    border 2px solid $gray
    background transparent
    font-size 14px
    cursor pointer
    margin-bottom 20px
    &:first-letter
      text-transform capitalize
    &:focus
      outline none
    &.mini
      content: ''
      padding: 0
      margin-top: 10px
      width: 10px
      height: 10px
      border-width: 1px
    &.blue
      border-color $graph-blue
      color $graph-blue
      &.active
        background $graph-blue
    &.red
      border-color $graph-red
      color $graph-red
      &.active
        background $graph-red
    &.green
      border-color $graph-green
      color $graph-green
      &.active
        background $graph-green
    &.orange
      border-color $graph-orange
      color $graph-orange
      &.active
        background $graph-orange
    &.purple
      border-color $graph-purple
      color $graph-purple
      &.active
        background $graph-purple
    &.active
      color white
    &.dropdown__button
      border: none
      border-radius: initial
      box-shadow: none
      display: inline-block
      margin: 0
      padding-left: 6px
      padding-right: 20px
      width: auto
  .dropdown
    font-weight: bold
    .dropdown__item
      border: none
      border-radius: initial
      margin: 0
      white-space: nowrap
