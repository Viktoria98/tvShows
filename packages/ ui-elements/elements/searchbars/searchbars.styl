.searchbar
  position relative
  float left
  &__input
    width 200px
    height 38px
    padding 0 16px 0 16px
    border 1px solid #ccc
    border-radius 18px
    -moz-box-shadow inset 0 1px 1px 0 rgba(26,26,26,0.15)
    -webkit-box-shadow inset 0 1px 1px 0 rgba(26,26,26,0.15)
    box-shadow inset 0 1px 1px 0 rgba(26,26,26,0.15)
    font-size 14px
    font-family 'Helvetica', 'Arial', sans-serif
    &:focus
      outline none
  &__clear-btn
    position absolute
    top calc(50% - 7px)
    right 13px
    width 15px
    height 15px
    background white
    cursor pointer
    &:before,
    &:after
      content ""
      width 2px
      height 15px
      position absolute
      top 0
      left 6px
      background #1e7de5
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)

.no-results
  padding 15px 22px
  &__title
    display block
    margin-bottom 5px
    font-size 14px
  &__descr
    margin 0
    font-size 13px
    line-height 1.38
    color #ccc

.autosuggest
  position relative
  display inline-block
  &.-readonly
    input
      background-color #e8ecf3
      border solid 1px #d4dae6
      color #afb4be
  .react-autosuggest__input-btn
    background-color: #e8ecf3;
  .icon
    position absolute
    width 12px
    height 12px
    top 14px
    left 10px
    z-index 1
.react-autosuggest
  &__container--open
    .react-autosuggest__suggestions-container
      display block
  &__input
    width 200px
    height 38px
    padding 0 16px 0 26px
    border 1px solid #ccc
    border-radius 18px
    box-shadow inset 0 1px 1px 0 rgba(26,26,26,0.15)
    font-size 14px
    font-family 'Helvetica', 'Arial', sans-serif
    &:focus
      outline none
      &::-webkit-input-placeholder
        color #A3AFC6
  &__suggestions-container
    display none
    position absolute
    z-index 10
    overflow visible
    min-width 450px
    margin-top 15px
    background white
    border 1px solid #ccc
    border-radius 6px
    box-shadow: 0 1px 5px 0 rgba(0, 0, 0, 0.3);
    max-height: calc(100vh - 70px);
  &__lists-container
    max-height calc(100vh - 178px)
    overflow-y: auto;
    overflow-x: hidden;
    &::-webkit-scrollbar
      width 12px
      height 12px
    &::-webkit-scrollbar-thumb
      background: #666
      border-radius 6px
      border 3px solid transparent
      background-clip content-box
    &::-webkit-scrollbar-track
      background #eaeaea
      margin-top 10px
      margin-bottom 10px
      border-radius 6px
      border 3px solid transparent
      background-clip content-box
  &__titles-container
    height 50px
    display flex
    padding-left 22px
    padding-right 22px
    border-bottom 1px solid #e7e7e7
  &__title-placeholder
    opacity 0
  &__title-trigger
    white-space nowrap
    height 50px
    line-height 50px
    position absolute
    top 0
    left 50%
    transform translateX(-50%)
    text-align center
  &__section-title
    position relative
    margin-right 20px
    padding-top 17px
    padding-bottom 17px
    font-size 14px
    color #1f7ce4
    cursor pointer
    .-active
      font-weight bold
    &:last-child
      margin-right 0
  &__suggestions-list
    box-sizing border-box
    width 96%
    margin 0
    padding 0
    list-style none
  &__suggestion
    height 36px
    padding-left 22px
    padding-right 10px
    white-space nowrap
    cursor pointer
    color #666
    font-size 14px
    line-height 36px
    &-wrapper
      height 100%
      overflow hidden
      text-overflow ellipsis
      max-width 470px
    &-title
      margin-right 8px
    &-secondary-title
      color #ccc
      font-size 13px
    &--highlighted
      background #1d81e2
      color white
  &__footer-container
    box-sizing border-box
    padding 13px 22px
    color #1f7ce4
    min-height 57px
    font-size 14px
    border-top 1px solid #e7e7e7
  &__footer-advice
    color #ccc
    font-size 13px
  &__input-wrapper
    position relative
  &__input-btn
    position absolute
    top calc(50% - 7px)
    right 13px
    width 15px
    height 15px
    background white
    border none
    cursor pointer
    &:focus
      outline none
    &:before,
    &:after
      content ""
      width 2px
      height 15px
      position absolute
      top 0
      left calc(50% - 1px)
      background #1e7de5
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
.-rotate
  -webkit-animation: rotation 2s infinite linear;
@-webkit-keyframes rotation {
  from {
    -webkit-transform: rotate(0deg);
  }
  to {
    -webkit-transform: rotate(359deg);
  }
}

.react-autosuggest__input-spinner {
    position: absolute;
    top: calc(50% - 7px);
    right: 13px;
    width: 15px;
    height: 15px;
    background: #fff;
    border: none;
    cursor: pointer;
}
