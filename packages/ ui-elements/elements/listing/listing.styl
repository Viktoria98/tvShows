/**
    CELLS STYLES
*/

.listing
  // regular cell
  .cell
    display inline-block
    line-height 20px
    height 21px
    vertical-align top
    border-right 1px solid #d8dde6
    box-sizing border-box
    transition background-color 0.2s ease
    &__wrapper
      p
        display inline // be aware, its temporary, needed for proper render tags inside expander
    &--expand
      overflow visible
      .cell__wrapper
        position absolute
        z-index 100
        top 0px
        left 1px
        padding-left 5px
        padding-right 5px
        background #fffecc
    &.--padding
      padding 0 6px
    &.--copying
      background-color #fffecc;
    // critical for expanders being properly rendered inside cell-tooltip
    // .cell-tooltip
    //   display inline
    .label
      white-space nowrap
  // cell header
  .cell-header
    overflow visible
    position relative
    &__wrapper
      display flex
      align-items center
    &__text
      overflow hidden
      text-overflow ellipsis
    &__resize-marker
      width 6px
      height 100%
      position absolute
      z-index 10
      top 0
      right -3px
      cursor col-resize
  &__header
    .cell
      font-weight bold
.text-ellipsis
  overflow hidden
  text-overflow ellipsis


/**
    CUSTOMIZING COMPONENTS INSIDE LISTING
*/

.listing
  .cell-button
    cursor pointer
    color #1d81e2
    border none
    width 100%
    &.-popup
      height auto
      width auto
      cursor pointer
      margin-left 5px
      position relative
      display inline-block
      box-sizing border-box
      margin-right 2px
      min-width 20px
      max-width 100%
      padding: 2px 5px
      line-height 13px
      font-size 11px
      vertical-align middle
      text-align center
      border-radius 4px
      color #004078
      background #e7f4fd
      border 1px solid rgba(20,149,235,0.3)
  // system checkbox
  .checkbox
    padding-top 3px
    .checkbox__box
      width 14px
      height 14px
  // link
  .link-container
    display inline-block
    width 100%
    padding 0 6px
    box-sizing border-box
    &.-link
      text-decoration none
      color #1d81e2
    &.-no-padding
      padding 0
    &.-initial-width
      width initial !important
  // input
  .editable-field
    margin-left -6px
    &.-open
      margin-right -6px
    &__text
      padding 0 6px
  // base dropdown
  .dropdown-base
    &__btn
      padding-left 6px
      &--no-chevron
        padding-right 6px
    &.-open:after
      content ''
      position absolute
      top -1px
      left -1px
      right -1px
      bottom -1px
      border 2px solid #1ba2e3
      z-index 50
  // feed dropdown
  .dropdown-feed
    &__btn-icon-counter
      top 0
      font-size 11px


/**
    CUSTOMIZING SPECIFIC COLUMNS INSIDE LISTING
*/
.listing
  .expired
    .-id
      color #c23636
      a
        color #c23636
    .-due
      .dropdown-base__btn-text
        color #c23636
  .fixed // issues page, ID column
    margin-top -1px
    background #eff1f3
    border-top 1px solid #d8dde6

  .cell.--locked
    background-color inherit
    position relative
    z-index 9
