/**
*  CORE LISTING STYLES
*/
.styledPopup
 .listing
    position relative
    float right
    overflow hidden
    border 1px solid #d8dde6
    border-radius 4px
    &__body
      position relative
      max-width 100%
      min-height 550px
      margin 0
      background #f9f9f9
    &__item
      clear left
      border-bottom 1px solid #d8dde6
      background white
      cursor pointer
      &.-bold
        font-weight bold
      &:first-child
        border-top 0
    &__item
    &__header
      white-space nowrap
      height auto
      background-color inherit
    &__header
      &__container
        position relative
        top 0px
        background-color #eff1f3
      &>*:nth-child(n)
        &:after
          content 'keyboard_arrow_down'
          font-family 'Material Icons'
          font-weight normal
          position absolute
          font-size 12px
      &>*:nth-child(n):empty
          &:after
            content ''
      .cell-header
        padding 0 6px
        font-weight bold
        min-height 24px !important
        &__text--sortable
          cursor pointer
          // this icon is fucked up, i.e. to repaint it we need to apply style to last path element (but not the fitst one)
          // don't have time to change it atm, so we are going to proceed with this solution for now
          // feel free to make it better
          .cell-header__sort-icon path:last-child
            fill #a9b2c4
        &--sort-asc,
        &--sort-desc
          .cell-header__sort-icon path:last-child
            fill #16325c
        &--sort-asc
          .cell-header__sort-icon
            transform rotate(180deg)
        &__sort-icon
          width 9px
          height 9px
          margin-left 3px    
    &__item
      text-align left
      float left
      border-bottom 1px solid #d8dde6
      &:first-child
        margin-top unset
        border-top unset
        &:hover
          margin-top unset
          border-top unset
      &>div:nth-child(n):empty, &>div:last-child
        background-color #f9fafb
      &:hover
        &>div:nth-child(n)
          margin-top unset
          background-color #ebf4fe !important
      &:nth-child(even)
        &>div:nth-child(n)
          background-color #f9fafb
        &:hover
          background-color #ebf4fe
      &.-selected
        margin-top -1px
        background-color #f2f8ff !important
        border-bottom 1px solid #A4D7F4
        border-top 1px solid #A4D7F4
        &:first-child
          border-top 2px solid #A4D7F4

