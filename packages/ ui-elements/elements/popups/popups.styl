.popup
  display none
  position: absolute;
  top 0
  left 0
  width 100%
  height 100%
  align-items center
  justify-content center
  z-index 100
  &--active
    display flex
  &__overlay
    position fixed
    top 0
    right 0
    left 0
    bottom 0
    z-index 10
    background-color rgba(0, 0, 0, 0.6)
  &__body
    width 480px
    position relative
    z-index 11
    padding 33px 31px 50px 31px
    background white
    border-radius 6px
    .popup-data
      overflow auto
      max-height 400px
      white-space pre-line
  &__title
    margin 0
    margin-bottom 20px
    font-size 24px
  &__content-box
    margin-bottom 20px
  &__close-btn
    position absolute
    top 16px
    right 16px
    width 21px
    height 21px
    background white
    cursor pointer
    &:before,
    &:after
      content ""
      width 15px
      height 2px
      position absolute
      top 9px
      left 3px
      background #cccccc
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
