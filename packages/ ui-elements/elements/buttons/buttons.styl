.button
  box-sizing border-box
  position relative
  padding 0 15px
  min-width 42px
  height 38px
  line-height 38px
  font-family 'Helvetica', 'Arial', sans-serif // font
  font-size 14px
  font-weight bold
  color #696969
  background #fafafa
  border 1px solid #cccccc
  border-radius 4px
  cursor pointer
  box-shadow 0 2px 0 rgba(26,26,26,0.15)
  &.-primary
    background #3c99f0
    border-color #1663ab
    color white
    text-transform uppercase
    border 1px solid #1663ad
    box-shadow 0 2px 0 rgba(22, 98, 173, 0.45)
    .icon g
      fill #ffffff
  &.-ghost
    font-weight bold
    background transparent
    box-shadow none
    &:hover, &:focus
      border-color lighten(#cccccc, 20%)
  &.-tooltip
    padding 0
    overflow visible
    .tooltip
      width 100%
      height 100%
      padding 0 20px
  &.-icon
    width auto
    &:before
      display none
    .icon
      position absolute
      top 50%
      left 50%
      transform translate(-50%,-50%)
  &.-disabled
    box-shadow none
    color #999999
    cursor not-allowed
    &:hover
      background-color #fafafa

//hovers
.button
  &:focus
    outline none
  &:hover
    background-color #fdfdfd
    .icon g
      fill #0B83E3
  &.-primary
    &:hover
      background-color lighten(#1d81e2, 20%)
      .icon g
        fill #ffffff
