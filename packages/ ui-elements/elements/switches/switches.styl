.switch
  &__container
    display inline-flex
    justify-content flex-start
    align-items center
    &.-enabled
      .switch__toggler
        background-color #59ad12
      .switch__button
        left 38px
      .switch__label
        color black
  &__toggler
    width 72px
    height 36px
    border-radius 18px
    background-color #d3d3d3
    position relative
    transition background-color .2s ease
    margin-right 17px
    cursor pointer
    &:before
    &:after
      display block
      position absolute
      color white
      font-weight bold
      font-size 14px
      top 10px
      z-index 3
    &:before
      content 'On'
      left 10px
    &:after
      content 'Off'
      right 10px
  &__button
    width 32px
    height 32px
    border-radius 50%
    position absolute
    top 2px
    left 2px
    z-index 4
    background-color white
    cursor pointer
    transition left .2s ease
  &__label
    transition color .2s ease
    color #bbbbbb
