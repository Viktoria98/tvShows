.icon
  width 20px
  height 20px
  g
    fill #696969
    transition all .2s ease
  &:hover g
    fill #0B83E3
  &.-notification g
    fill white
    g
      stroke #696969
    &:hover g
      fill white
      stroke #0B83E3
  &.-star
    &:hover g
      stroke #0B83E3
  &.-small
    width 12px
    height 12px
  &.-medium
    width 24px
    height 24px
  &.-contain
    width 100%
    height 100%
  &.-trendMD
    width 110px
    height 29px
  &.-comments
    padding 1px
    box-sizing border-box
  &.-longArrow
    &.down
      transform rotate(180deg)
    &.left
      transform rotate(-90deg)
    &.right
      transform rotate(90deg)
