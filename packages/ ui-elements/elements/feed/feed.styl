.feed
  .DraftEditor-root
    box-sizing border-box
    padding 5px
    padding-left 10px
    border-radius 5px
    border 1px solid #d3d3d3
    font-size 14px
    box-shadow inset 0 1px 1px 0 rgba(26,26,26,0.15)
    background white
  &__container
    max-height 200px
    overflow auto
    // padding 5px
    margin-bottom 10px
    &::-webkit-scrollbar
      width 12px
      height 12px
    &::-webkit-scrollbar-thumb
      background rgba(82, 97, 115, .25)
      border-radius 6px
      border 5px solid transparent
      background-clip content-box
    &::-webkit-scrollbar-track
      margin-top 10px
      margin-bottom 10px
    .log
      position relative
      background-color #fff
      // background-color #f2f8ff
      padding 5px
      margin-bottom 10px
      padding: 0 5px
      border-radius: 3px;
      &__content
        display inline-block
        margin-top 5px
        margin-left 10px
        max-width 218px
      &__header
        display inline-block
        justify-content space-between
        align-items center
        font-size 14px
      &__author
        margin-right 5px
        color #16325c
      &__avatar
        display inline-block
        width 30px
        height 30px
        border-radius 50%
        vertical-align top
        box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.1)
      &__date
        color grey
        font-size 11px
      &__text
        color #16325c
        display inline
        white-space normal
        word-break break-word
        p
          display inline
  .comment
    position relative
    //background-color #fff
    background-color #fafbfc
    padding 5px
    margin-bottom 10px
    padding: 0 5px
    border-radius: 3px;
    &.-own
      background-color #f2f8ff
    &__content
      display inline-block
      margin-top 5px
      margin-left 10px
      max-width 218px
    &__header
      justify-content space-between
      align-items center
      font-size 14px
    &__remove
      position absolute
      top 4px
      right 3px
      width 18px
      height 18px
      margin-left 6px
      cursor pointer
      display inline-block
      &:before,
      &:after
        content ''
        display block
        position absolute
        width 10px
        height 2px
        top 50%
        left 3px
        background-color #767775
      &:before
        transform translate(0, -50%) rotate(-45deg);
      &:after
        transform translate(0, -50%) rotate(45deg)
    &__author
      margin-right 5px
      color #16325c
    &__avatar
      display inline-block
      width 30px
      height 30px
      border-radius 50%
      vertical-align top
      box-shadow 0 1px 3px 0 rgba(0, 0, 0, 0.1)
    &__date
      color grey
      font-size 11px
    &__text
      color #16325c
      white-space normal
      word-break break-word
      p
        display inline
    &__space
      white-space pre-line
    &__none
      display none
