.editable-field
  height 100%
  position relative
  overflow hidden
  text-overflow ellipsis
  &__input
    display none
    position absolute
    z-index 100
    top -1px
    left 0
    bottom 0
    right 0
    width 100%
    height 100%
    padding 0 6px
    box-sizing border-box
    outline none
    border none
    line-height 21px
    font-size 13px
    font-family 'sanfranciscodisplay-regular', 'Arial', sans-serif
  &.-expand
    overflow visible
    .editable-field__text
      position absolute
      z-index 100
      top 0px
      left 1px
      padding-left 5px
      padding-right 5px
      background #fffecc
  &.-edit
    overflow visible
    .editable-field__input
      display block
    .editable-field__text
      overflow hidden
      display block
