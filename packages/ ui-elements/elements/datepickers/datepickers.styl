.rangeDatepicker
  width: 380px
  margin-bottom 0
  border 1px solid #cccccc
  border-radius 4px
  // instead of general
  *
    box-sizing border-box
  &.-dual
    width 640px
  &.-single
    width 100%
    .rangeDatepicker
      &__ranges
        padding 0px 10px
      &__range
        padding 15px 9px
      &__calendars
        width 100%
    .DateRangePicker__Month
      margin 0px 65px !important
  &__ranges
    background-color #fafafa
    width 100%
    padding 0 30px
    border-top 1px solid #cccccc
    border-bottom 1px solid #cccccc
    display flex
    justify-content center
    li
      display inline-block
      padding 15px 18px
      cursor pointer
      &.-active
        font-weight bold
        position relative
        &:after
          content ''
          display block
          position absolute
          width 10px
          height 10px
          background-color #fafafa
          border 1px solid #cccccc
          border-top-color transparent
          border-right-color transparent
          -ms-transform rotate(-45deg)
          -webkit-transform rotate(-45deg)
          transform rotate(-45deg)
          bottom -6px
          left 50%
          margin-left -6px
  &__calendars
    padding 30px
  &__header
    border-bottom 1px solid #E6E6E6
    padding 15px 20px
    &__item
      display inline-block
      padding 2px 10px
      background #e7f2ff
      color #1d81e2
      margin-right 20px
      border-radius 4px
      cursor pointer
      &.-active
        background-color #1d81e2
        color white
  &__dates
    border-bottom 1px solid #E6E6E6
    padding 15px 20px
    overflow hidden
    &__date
      width 50%
      float left
      &__heading
        text-transform uppercase
        font-size 9px
        color #999999
      &__reminder
        color #999999
        margin-top 3px
      &__decimal
        display inline-block
        font-size 31px
        letter-spacing 0.35px
        margin-right 8px
      &__text
        display inline-block
      &__month
        color #999999
        margin 0
      &__day
        font-size 10px
        color #bbbbbb
        margin 0
      &.-end
        position relative
        padding-left 10px
        &:before
          content ''
          display block
          position absolute
          width: 0
          height 0
          left -10px
          top 28px
          border-style solid
          border-width 5px 0 5px 7px
          border-color transparent transparent transparent #aaa
  &__calendar
    .DateRangePicker
      margin 0

.datepicker
  .dropdown
    width auto !important
    margin-right 15px
    .dropdown__button
      width 100% !important

.DateRangePicker__MonthHeaderSelect
  background white
  option:hover
    background #1d81e2
    color white

// plugins react datepicker

.rangeDatepicker__calendars
  width 640px
.rangeDatepicker__calendar,
.rangeDatepicker__calendars
  .DateRangePicker
    width 100%
    .DateRangePicker__Month
      margin 0 30px 0 0
      &~ .DateRangePicker__Month
        margin-right 0
      .DateRangePicker__MonthDates
        border-spacing 0 5px
        border none
        .DateRangePicker__WeekdayHeading
          border none
          abbr
            color #878787
            font-weight normal
            font-size 14px
  .DateRangePicker__Date
    padding 14px 0
    min-width 40px
    border none
    &--weekend
      background-color transparent
    &--is-selected
      background-color transparent
      color black
      &:first-of-type
        .DateRangePicker__CalendarSelection
          border-radius 50% 0 0 50%
          &--end
            border-radius 50% !important
      &:last-of-type
        .DateRangePicker__CalendarSelection
          border-radius 0 50% 50% 0
          &--start
            border-radius 50% !important
    &--is-highlighted
      .DateRangePicker__CalendarHighlight
        border-radius 50%
        border 2px solid #1d81e2
        background-color rgba(255, 255, 255, 0.5)
    &--otherMonth
      opacity 1
      color rgba(0, 0, 0, 0.5)
    &--is-disabled
      opacity 1
      color rgba(0, 0, 0, 0.2)
  .DateRangePicker__CalendarSelection
    background-color #E3F0FF
    border none
    bottom 0
    top 0
    right 0
    left 0
    &--start
    &--end
      border-radius 0 50% 50% 0 !important
      &:before
        content ''
        display block
        width 36px
        height 36px
        border 2px solid #1d81e2
        border-radius 50%
        background-color white
    &--start
      border-radius 50% 0 0 50% !important
  .DateRangePicker__PaginationArrow
    background-color #fafafa
    border-radius 50%
    width 40px
    height 40px
    &--next
      right 0
      &--is-disabled
        cursor default
    &--previous
      left 0
      &--is-disabled
        cursor default
  .DateRangePicker__PaginationArrowIcon
    border-top-width 5px
    border-bottom-width 5px
    &--previous
      border-left-width 5px
      border-right-width 7px
      left 10px
      top 15px
    &--next
      border-left-width 7px
      border-right-width 5px
      left 18px
      top 15px

// v2
.rangeDatepicker__calendar
  width 380px
  padding 20px
  .DateRangePicker
    .DateRangePicker__Month
      margin 0
      width 340px
      .DateRangePicker__Date--is-selected
        .DateRangePicker__CalendarSelection
          width 40px
          margin 0 auto
          &:after
            content ''
            display block
            position absolute
            width 50px
            height 40px
            left -5px
            top 0
            background-color #E3F0FF
            z-index -1
          &--start
            &:after
              width 45px
              left 0
              border-radius 50% 0 0 50%
          &--end
            &:after
              width 45px
              border-radius 0 50% 50% 0
          &--single
            background-color transparent
            &:after
              left 0
              width 40px
              margin 0 auto
              border-radius 50%
        &:first-of-type
          .DateRangePicker__CalendarSelection
            &:after
              width 45px
              left 0
              border-radius 50% 0 0 50%
            &--end
             &:after
                width 40px
                border-radius 50%
        &:last-of-type
          .DateRangePicker__CalendarSelection
            &:after
              width 45px
              left -10px
              border-radius 0 50% 50% 0
            &--start
             &:after
                left 0
                width 40px
                border-radius 50%
      .DateRangePicker__Date--is-highlighted
        .DateRangePicker__CalendarHighlight
          border none
          width 30px
          margin 0 auto
          background-color #1d81e2
          opacity 0.1
