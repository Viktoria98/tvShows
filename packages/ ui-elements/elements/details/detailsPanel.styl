.details-panel
  // display none
  display flex
  flex-direction column
  width 400px
  padding 17px
  background white
  // &.-open
  .details-panel__close-btn
    position absolute
    z-index 100
    top 18px
    right 18px
    width 21px
    height 21px
    background white
    cursor pointer
    &:before,
    &:after
      content ""
      width 15px
      height 2px
      position absolute
      top 9px
      left 3px
      background #cccccc
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
  .link-container.-link
    text-decoration none
    color #1d81e2


