.scrollable
  position fixed
  top 60px
  right 10px
  bottom 0
  padding 0
  // padding-bottom 80px
  box-shadow 0 6px 11px 2px rgba(0, 0, 0, 0.2)
  &__top-container
    position relative
    padding 20px 40px
    padding-bottom 25px
    flex-shrink 0
    box-shadow 0 4px 15px -3px rgba(0,0,0,0.2)
    margin-bottom 5px
  &__show-btn
    color #0070d2
    cursor pointer
    position absolute
    bottom 10px
    // bottom 18px
    right 10px
  &__scroll-container
    flex-grow 1
    overflow auto
    overflow-x hidden
    padding 0 20px
    padding-top 10px
  &__bottom-container
    background white
    box-sizing border-box
    padding 30px 40px
    border-top 1px solid #e4e0e0
