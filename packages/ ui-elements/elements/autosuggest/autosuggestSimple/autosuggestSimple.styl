.autosuggest-simple
  position relative
  padding 10px
  &__input
    font-size 12px
    display inline-block
    width 100%
    margin-bottom 10px
    border-radius 3px
    border 1px solid #d8dde6
    padding 8px 0 8px 10px
    box-shadow inset 0 1px 1px 0 rgba(0, 0, 0, 0.2)
    height 30px
    box-sizing border-box
    outline none
    color: #16325c
  &__suggestion
    position relative
    left -10px
    height 32px
    width 100%
    font-size 12px
    padding-left 19px
    cursor pointer
    padding-top 10px
    color: #16325c
    &:hover
        background #0070d2
        color #fff
  &__suggestions-container
    max-height 200px
