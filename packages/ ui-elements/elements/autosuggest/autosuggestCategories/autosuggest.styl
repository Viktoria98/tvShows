ul#headerSearch
  width 230px
  &.autosuggesDropdown
    max-width 35vw !important
    &.-active
      width 35vw !important
      max-width 650px !important
      min-width 400px !important
    &__content
      &.-active
        width 35vw !important
        max-width 650px !important
        min-width 400px !important
  .sk-fading-circle
    top 14px !important

.autosuggesDropdown
  display inline-block
  position relative
  max-width 500px
  padding 0
  font-size 13px
  color #16325c
  margin 0
  border-radius 3px 3px 0 0
  background white
  z-index 21
  .material-icons
    width 12px
    font-size 14px
    line-height 38px
  i
    color #c2cbdc
    margin-left 10px
  >div:first-child
    display flex
    flex-flow row nowrap
    box-shadow inset 0 1px 2px 0 rgba(0,0,0,0.2)
    border 1px solid #d8dde6
    border-radius 3px
    background-color white
    &:before
      font-family 'Material Icons'
      content 'chevron_left'
      font-size 14px
      font-weight normal
      color #c2cbdc
      position absolute
      line-height 38px
      right 10px
      transform rotate(-90deg)
  ul
    padding 0
  li
    list-style none
  &__clear-btn
    position absolute
    top 14px
    right 10px
    width 12px
    height 12px
    background white
    border none
    cursor pointer
    &:focus
      outline none
    &:before,
    &:after
      content ""
      width 1.5px
      height 12px
      position absolute
      top 0
      left calc(50% - 1px)
      background #1e7de5
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
  &.disabled
    background-color #e8ecf3
    border solid 1px #d4dae6
    color #afb4be
    .autosuggesDropdown__clear-btn
      background none
  .sk-fading-circle
    margin-left 10px 
    height 12px
    width 12px
    min-width 12px
    position relative
  .icon
    color #1d81e2
  input
    flex-grow 1
    border 0
    margin 0 32px 0 10px
    font-family 'sanfranciscodisplay-regular', 'Arial', sans-serif
    font-size 13px
    line-height 36px
    width auto
    background-color transparent
    &:focus
      outline none
      border 0
  &.-active
    width 460px
    border 1px solid #d8dde6
    .pills-list
      margin 0 0 0 10px
    .autosuggesDropdown__clear-btn
      top 12px
    >div:first-child
      box-shadow none
      border none
      &:before
        color #1d81e2
    .--selected:before
      border-color #16325c
    i
      color #0b83e3
  &__content
    display none
    padding 0
    &.-active
      width 100%
      display block
  &__content-block
    color #5a6d8b
    position relative
    border-top 1px solid #dde2ea
    .filters-wrap
      vertical-align top
      display inline-block
      line-height 32px
      font-size: 13px
      box-sizing border-box
    .categories-wrap
      display inline-block
      width 150px
      line-height 32px
      font-size: 13px
      position relative
      .categories
        li
          height 32px
          padding-left 11px
          &:hover
            background #f2f8ff
            cursor pointer
          &.selected
            background-color #f2f8ff
        .category-item
          color #16325c
          width 110px
          overflow hidden
          display inline-block
          text-overflow ellipsis
          white-space nowrap
          &__count
            right 11px
            position absolute
            color #a9b2c4
    .filters-wrap
      display inline-block
      width calc(100% - 150px)
      max-height 320px
      overflow-y auto
      overflow-x hidden
      .fixed-tooltip__cloud
        max-width 500px
        .tooltip__row
          display flex
          .tooltip__row-el
            flex-shrink 1
            text-align left
            &--title
              min-width 100px
              max-width 100px
            &--value
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
      .filter-item
        position relative
        color #16325c
        &.selected
          background #f2f8ff
          cursor pointer
        &.checked
          background #0070d2
          color #fff
        &__icon
          height 20px
          width 20px
          border-radius 10px
          background #621666
          color #fff
          position: absolute
          margin 6px
          text-align center
          font-size 11px
          line-height 22px
        &__name
          padding 0 30px 0 11px
          text-overflow ellipsis
          white-space nowrap
          height 32px
          overflow hidden
          max-width 100%
          display block
        &__count
          position absolute
          right 10px
          color: #a9b2c4;
          top 0
        &__prompt
          color #c3d4dc
        &__icon + .filter-item__name
          padding 0 30px 0 30px
  &__link
    display block
    line-height 32px
    list-style-type none
    padding-left 32px
    text-decoration none
    color inherit
    &:not(.--selected):hover
      background-color #0070d2
      color white
      i path.main
        fill white
    &.--selected
      line-height 38px
      height 38px
    &.--selected + a
      border-top 1px solid #d8dde6
    &.--selected:before
      position: absolute;
      top: calc(50% - 7px);
      right: 13px;
      width: 15px;
      height: 15px;
      background: #fff;
      border: none;
      cursor: pointer;
    i
      position absolute
      left 10px

  .pills-list
    height 38px
    overflow hidden
    margin 0 32px 0 10px
    &__content
      overflow-y scroll
      max-height 50px
      line-height 38px
      list-style none
      width 200%
    li
      display inline-block
      &.selected
        span
          background #e0e0e0
          color #525252
          border 1px solid rgba(179, 179, 179, 0.3)

  &__content-block
    .pills-list
    height auto
    overflow auto
    margin 7px 40px 7px 0
    &__content
      line-height 25px
      width 100%
