.warning 
    display table
    color rgba(0,0,0,.4)
    background rgba(255,255,255,.8)
    font-family 'Helvetica'
    margin-top 10px
    margin-bottom 10px
    width 100%
    border-radius 15px
    &.-info
	background rgba(255,255,255,.8)
	color rgba(0,0,0,.4)
    &.-warning
	background $yellow-light
	color rgba(0,0,0,.6)
    &.-error
	background $red-light
	color rgba(0,0,0,.6)
    #icon 
	float left
	margin 10px
	fill rgba(0,0,0,.6)
    #textbox
	font-size 14px
	margin 10px
	margin-left 40px

