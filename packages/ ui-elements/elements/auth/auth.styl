.auth
  width 362px
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)
  &__logo
    text-align center
    font-weight normal
    font-size 30px
    margin 0 0 15px 0
    letter-spacing 8px
    font-family "gotham-medium"
  &__title
    text-align center
    text-transform uppercase
    color rgba(0,0,0,0.47)
    margin 0 0 22px 0
    font-family "gotham-medium"
    font-weight normal
    font-size 16px
  &__separator
    width 100%
    border-bottom 1px solid #cecece
    margin-bottom 37px
  &__button
    .abcRioButton
      border 1px solid #ccc
      background-color #fafafa
      border-radius 4px
    div
      margin 0 auto
      .abcRioButtonContents
        font-family 'whitney-semibold' !important
        text-transform uppercase
