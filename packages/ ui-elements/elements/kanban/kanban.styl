.kanban
  display flex
  // flex-direction column // with infinite scroll
  padding 10px
  overflow auto // without infinite scroll
  &__header
    padding 5px 13px
    padding-top 13px
    font-size 21px
    font-weight bold

.kanban-list
  width 300px
  display flex
  flex-direction column
  flex-shrink 0
  box-sizing border-box
  // margin-bottom 10px
  margin-right 20px
  &__body
    display flex
    flex-direction column
    padding 10px
    background #f9f8fd
    border-radius 4px
  &__header
    padding-top 5px
    padding-bottom 10px
    font-size 21px
  &__cards-container
    overflow auto
    margin-bottom 10px
  &__fake-expander
    flex-grow 1
    background transparent
  &__add-btn
    display flex
    align-items center
    color #b9b9b9
    background none
    border none
    outline none
    cursor pointer
    .icon
      width 15px
      height 15px
      margin-right 5px
      g
        fill #b9b9b9

.kanban-card
  padding-top 3px
  padding-bottom 3px
  &.-closed
    .kanban-card__wrapper
      border-color #a9b2c4
      color #a3afc6
      background #f2f5f9
      &.-selected
        background #d1e0ef
  &__wrapper
    display flex
    align-items center
    padding 15px
    border 1px solid #e8e9ec
    cursor pointer
    background white
    border-radius 5px
    &.-selected
      border-color #afc4d4
      background #f1f8ff
  &__title
    flex-grow 1
    padding 0 10px
    word-break break-word
    font-size 16px
  .checkbox
    height 26px
    &__box
      width 26px
      height 26px
      display flex
      align-items center
      justify-content center
      border-radius 50%
      border 1px solid #a3afc6
      .checkbox__check
        position static
        g
          fill #a3afc6 !important
    &.-checked
      .checkbox__box
        background #7ec857
        border-color #7ec857
        g
          fill #ffffff !important

.dnd-kanban-card
  &__placeholder
    width 100%
    height 40px
    background lightblue
    border-radius 5px
