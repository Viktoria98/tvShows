/**
* Here are listed styles for dropdown components, especially for dropdown base
* if styles for specific component are lightwieght, you should place them here,
* otherwise create different styl file and imprort it directly in that compontent
*/
.dropdown-base
  position relative
  cursor pointer
  text-align left
  &__btn
    height 21px // without height empty btn would collapse, should be customizible TODO consider
    position relative
    padding-right 18px
    // we have specific paggins for btn with chevron, and we don't need them without chevron
    &--no-chevron
      padding-right 0
  &__btn-text
    overflow hidden
    text-overflow ellipsis
    // for links inside btn, mostly in dropdowntextarea
    a
      color #1d81e2
      text-decoration none
  &__chevron-icon
    position absolute
    top 50%
    right 5px
    width 9px
    height 8px
    transform translateY(-50%)
  &__body
    cursor initial
  &__options-container
    display none
    position absolute
    width 100%
    top 150%
    z-index 100
    width 200px
    margin 0
    padding 3px 0
    box-sizing border-box
    list-style none
    background-color #fff
    border solid 1px #d8dde6
    border-radius 5px
    filter drop-shadow(0 4px 8px rgba(0, 0, 0, 0.15))
  &__container-pointer
      width 20px
      height 9px
      position absolute
      top -9px
      path:nth-of-type(2)
        fill #fff
      pointer-events none
      &.-arrow-down
        top auto
        bottom -9px
        transform rotate(180deg)
  &__option
    display flex
    height 32px
    justify-content space-between
    align-items center
    min-height 21px
    position relative
    overflow hidden
    padding 0 10px 0 20px
    text-overflow ellipsis
    color #16325c
    line-height 32px
    &:hover
      cursor pointer
      background-color #0070d2
      color #ffffff
    &.-selected
      fill #0070d2
      &:hover
        fill #ffffff
    &.-hovered
      background-color #0070d2
      color #fff
      fill #fff
    .option__additional-text
      color #ccc
      margin-left 5px
  // styles for opened dropdown
  &.-open
    .dropdown-base__options-container
      display block
    .dropdown-base__chevron-icon
      transform translateY(-50%) rotate(180deg)
    .dropdown-base__options
      list-style none
      margin 0
      padding 0
      overflow-y auto

// autosuggest
.dropdown-autosuggest
  &__input-container
    padding-left 10px
    padding-right 10px
  &__input
    font-size 12px
    display inline-block
    width 100%
    margin-bottom 10px
    margin-top 7px
    border-radius 3px
    border 1px solid #c9c9c9
    border 1px solid #d8dde6
    padding 8px 0 8px 10px
    box-shadow inset 0 1px 1px 0 rgba(0, 0, 0, 0.2)
    height 30px
    box-sizing border-box
    &:focus
      outline none
      border-color #0070d2
      box-shadow 0 0 5px #0070d2


// feed, i.e. comments/logs/updates
.dropdown-feed
  .dropdown-base__options-container
    padding 10px
    text-align left
  &__btn-icon
    display inline-flex
    align-items center
    justify-content center
    g
      fill #f2f8ff
      path
        stroke rgba(0, 112, 210, 0.3)
    &--no-messages
      .dropdown-feed__btn-icon-counter
        color #a3afc6
      g
        fill #ffffff
        path
          stroke #e0e5ee
  &__btn-icon-counter
    position absolute
    top 3px
    color #0070d2
    font-size 11px

// textarea
.dropdown-textarea
  .DraftEditor-root
    width 95%
    min-height 200px
    max-height 200px
  .dropdown-base__btn
    p
      margin 0
      overflow hidden
      text-overflow ellipsis
  .dropdown-base__btn-text
    max-height 100%
  .dropdown-base__options-container
    text-align center

// tag-editor
.dropdown-tag-editor
  .dropdown-base__body
    .dropdown-base__options
      overflow-y visible
