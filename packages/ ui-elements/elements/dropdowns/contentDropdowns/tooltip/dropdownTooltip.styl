.dropdown-tooltip
  .dropdown-base__options-container
    // max-height 200px
    // overflow auto
    padding 10px 15px
    background-color white
    .dropdown-tooltip-content
      .dropdown-tooltip-title
        padding-left 15px
      .dropdown-tooltip-content
        padding-left 15px
    .dropdown-tooltip-content-yes
      background-color #D2EDDC
      display inline-block
      padding 2px 10px
      border-radius 5px
    .dropdown-tooltip-content-no
      background-color #F3ADD1
      display inline-block
      padding 2px 10px
      border-radius 5px
    .dropdown-tooltip-title
      font-weight bold
    table
      margin-bottom 10px
      tr
        text-align left
        padding 10px
