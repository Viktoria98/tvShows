.dropdown-tag-editor
  .tag
    margin-right 5px
  .dropdown-base__btn
    .tag
      display inline // allow text-overflow inside btn
  .dropdown-base__options
    overflow-y visible

.tag-editor
  padding 7px 10px 0
  position relative
  &__tags-list
    list-style none
    margin 0
    padding 0
    margin-bottom 8px
    white-space normal
    .tag
      margin-bottom 2px
      margin-right 2px
      &--editable // editable tag has delete btn, so it should have different paddings
        position relative
        padding-right 15px
      &__delete-btn
        position absolute
        width 10px
        height 10px
        top 50%
        right 3px
        cursor pointer
        transform translateY(-50%)
        &:before,
        &:after
          content ''
          display block
          position absolute
          width 10px
          height 2px
          top 50%
          background-color #767775
        &:before
          transform translate(0, -50%) rotate(-45deg);
        &:after
          transform translate(0, -50%) rotate(45deg)

// input with autosuggest inside tag-editor
.tag-creator
  &__input
    box-sizing border-box
    width 100%
    padding 8px 10px
    background white
    border 1px solid #ccc
    border-radius 3px
    margin-bottom 7px
    height 30px
    box-shadow inset 0 1px 1px 0 rgba(0, 0, 0, 0.2)
    border solid 1px #d8dde6
    font-size 12px
    line-height 32px
    color #16325c
    &:focus
      outline none
      border-color #0070d2
      box-shadow 0 0 5px #0070d2
    &::-webkit-input-placeholder
      color rgba(82,97,115,0.25)
  &__add-btn
    position absolute
    top 50%
    right 12px
    z-index 10
    width 10px
    height 10px
    margin-left 6px
    cursor pointer
    transform translateY(-50%)
    &:before,
    &:after
      content ''
      display block
      position absolute
      width 10px
      height 2px
      top 50%
      background-color #767775
    &:before
      transform translate(0, -50%) rotate(-90deg)
    &:after
      transform translate(0, -50%)
  &__tags-autosuggest
    display none
    position absolute
    left -1px
    right -1px
    margin 0
    padding 0
    list-style none
    background #fff
    border-right 1px solid #d8dde6
    border-left 1px solid #d8dde6
    border-bottom 1px solid #d8dde6
    border-radius 0 0 5px 5px
    min-height auto
    max-height 170px
    overflow auto
    &::-webkit-scrollbar
      width 12px
      height 12px
    &::-webkit-scrollbar-thumb
      background rgba(82,97,115,0.25)
      border-radius 6px
      border 5px solid transparent
      background-clip content-box
    li
      padding 2px 20px
      height 32px
      display flex
      align-items center
      cursor pointer
      overflow hidden
      text-overflow ellipsis
      &:hover
        background-color #0070d2
        color #fff
    &--expand
      display block
