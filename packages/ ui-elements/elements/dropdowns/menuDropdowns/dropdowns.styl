// base
.dropdown
  display inline-block
  position relative
  font-size 14px
  &__button
    box-sizing border-box
    position relative
    padding 0 15px
    min-width 75px
    height 38px
    line-height 38px
    font-family 'Helvetica', 'Arial', sans-serif // font
    font-size 14px
    font-weight bold
    color #696969
    background #fafafa
    border 1px solid #cccccc
    border-radius 4px
    cursor pointer
    box-shadow 0 2px 0 rgba(26,26,26,0.15)
    font-size 14px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 200px
    padding-right 30px
    text-align left
    &.-disabled
      .icon
        &.-reload
          path
            fill #a9b2c4
    &:before
      content ' '
      position absolute
      top 50%
      transform translateY(-50%)
      width 0
      height 0
      border-style solid
      border-width 4px 4px 0 4px
      border-color #cccccc transparent transparent transparent
      right 10px
    &.-disabled
      cursor auto
      background-color #e8ecf3
      color #afb4be !important
      &:before
        content none
  &__close
    display none
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 99
    &.-visible
      display block
  &__container
    display none
    position absolute
    overflow hidden
    min-width 100%
    top 0
    background white
    border 1px solid #cccccc
    border-radius 4px
    z-index 99
    padding 5px 0
    &.-visible
      display block
      box-shadow 0 2px 8px 0 rgba(0, 0, 0, 0.25)
    &.-right
      right 0
    hr
      border 1px solid #D8DDE6
  &__scroll
    overflow-y auto
    &::-webkit-scrollbar
      width 6px
      height 6px
    &::-webkit-scrollbar-track
      background-color whitesmoke
    &::-webkit-scrollbar-thumb
      background-color #666666
      border-radius 6px
  &__input
    position absolute
    opacity 0
    left 0
    z-index -1
  .divider
    border-bottom 1px solid #d8dde6
    list-style-type none
// dropdown item
.dropdown__list__item
  display block
  box-sizing border-box
  position relative
  height 34px
  padding 9px 50px 9px 15px
  color #696969
  white-space nowrap
  overflow hidden
  cursor pointer
  &:hover
    background #1d81e2
    color white
  &.-disabled
    color #e4e4e4
    cursor auto
    &:hover
      color #e4e4e4
      background-color transparent
  &.-active
    font-weight bold
    color #1d81e2
    padding-right 40px
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    .icon
      position absolute
      right 5px
      top 6px
      width 15px
      height 15px
      g
        fill #1d81e2
    &:hover
      color white
      .icon g
        fill white
