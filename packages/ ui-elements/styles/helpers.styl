// class will apply customized scrollbar to any element
.--helpers
  // grey scrollbar 
  &-custom-scrollbar
    &::-webkit-scrollbar
      width 12px
      height 12px
    &::-webkit-scrollbar-thumb
      background #D3D6DB
      border-radius 6px
      border 4px solid transparent
      background-clip content-box
    &::-webkit-scrollbar-track
      margin-top 10px
      margin-bottom 10px
      border-radius 6px
      border 3px solid transparent
      background-clip content-box
  // grey scrollbar with thin track
  &-custom-scrollbar-light
    &::-webkit-scrollbar
      width 12px
      height 12px
    &::-webkit-scrollbar-thumb
      background rgba(82, 97, 115, .25)
      border-radius 6px
      border 5px solid transparent
      background-clip content-box
    &::-webkit-scrollbar-track
      margin-top 10px
      margin-bottom 10px
  // black scrollbar (old version)
  &-custom-scrollbar-black
    &::-webkit-scrollbar
      width 12px
      height 12px
    &::-webkit-scrollbar-thumb
      background #666666
      border-radius 6px
      border 3px solid transparent
      background-clip content-box
    &::-webkit-scrollbar-track
      background #f5f5f5
      margin-top 10px
      margin-bottom 10px
      border-radius 6px
      border 3px solid transparent
      background-clip content-box
