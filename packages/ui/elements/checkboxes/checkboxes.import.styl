.checkbox
  display inline-block
  .label
    display inline-block
    white-space nowrap
    cursor pointer
    margin 0 20px 0 8px
  label
    position relative
  input[type="checkbox"]
    position absolute
    opacity 0
  input[type="checkbox"]:focus + label:before
    content ""
    position absolute
    top 5px
    left 16px
    height 16px
    width 16px
    background transparent
    border-radius 3px
    box-shadow(0px, 0px, 3px, 0px, rgba(29,129,226,1))
  input[type="checkbox"]:focus + label span:before
    content ''
    display block
    position relative
    width 15px
    height 15px
    top 3px
    left 1px
    box-shadow(0px, 0px, 3px, 0px, rgba(29,129,226,1))
  input[type="checkbox"] + label
    display inline-block
    vertical-align middle
    height 21px
    &:before
      border-radius 3px
      border 1px solid #D5D5D5
      content ''
      display block
      position absolute
      width 16px
      height 16px
      top 5px
      left 16px
  input[type="checkbox"] + label span
    display inline-block
    cursor pointer
    vertical-align middle
    width 20px
    height 20px
  input[type="checkbox"] + label svg
    width 17px
    height 17px
    opacity 0
    position relative
    top 1px
    left 4px
    g
      fill $icon-hovered
  input[type="checkbox"]:checked + label span
    background-image url('/packages/ff_ui/assets/images/check.svg')
    background-repeat no-repeat
    background-position 3px 2px
    background-size 15px 15px
  input[type="checkbox"]:checked + label svg
    opacity 1
  span
    float left
  div.label
    position relative
    white-space nowrap
    cursor pointer
    &.-required:after
      content " *"
      color: red
  &.-error
    input[type="checkbox"]+ label span:before
      content ''
      display block
      position relative
      width 15px
      height 15px
      top 2px
      border-radius $border-radius
      border 1px solid $red
