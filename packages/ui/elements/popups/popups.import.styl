.popup
  display none
  top 0
  left 0
  position absolute
  width 100%
  height 100%
  align-items center
  justify-content center
  z-index 99
  &.wide
    .half
      width: 100%
      margin: none
      float: none
  &.auto
    .popup__body
      width auto
  &.-visible
    display flex
  &.-abstract
    .popup__content
      line-height 21px
  &__background
    content ' '
    display block
    position fixed
    width 100%
    height 100%
    top 0
    left 0
    background rgba(0,0,0,.6)
  &__body
    width 480px
    position fixed
    background $white
    border-radius $border-radius
    max-height calc(100vh - 60px)
    box-shadow: 0 0 50px 0 rgba(0, 0, 0, 0.25)
    top: calc(100% - (height  / 2))
    left: calc(100% - (width / 2))
    padding: 30px
    overflow-y: auto
  &__scrollfade-y
    position: absolute
    background: linear-gradient(to top, rgb(255, 255, 255), rgba(255, 255, 255, 0) )
    height: 50px
    width: 100%
    left: 0
    bottom: 0
    z-index: 2
  &__heading
    margin 0 0 17px 0
  &__close
    position absolute
    top 20px
    right 20px
    &.-bordered
      box-shadow 0px 0px 5px 0px rgba(209,209,209,1)
    &.-fixed
      position fixed
      right calc(50% - 210px)
      top 50px
      background-color white
      z-index 999
      width 30px
      height 30px
      border-radius: 50%
      &::before
      &::after
        left 14px
        top 8px
  .grayed
    margin-bottom 15px
  .dropdown
    &__list
      max-height 220px
  .dropdown, .dropdown__button
    width 100%
  .button
    float right
    margin-left 10px
    padding 12px 30px
    font-family 'gotham-medium'
    font-size 12px
    line-height 0.96
    font-weight 500
    height auto
    &.-primary
      background-color #1d81e2
      &:disabled
        box-shadow 0 2px 0 rgba(26,26,26,0.15)
        color #e4e4e4
        background #fafafa
        border-color #ccc
  .delete
    line-height 36px
    color $gray
  .datepicker
    .dropdown__month,
    .dropdown__day,
    .dropdown__year
      width auto
      .dropdown__list
        min-width 100%
        max-height 200px !important
        overflow auto

.infoTable
  font-size 13px
  .infoRow
    padding 7px 10px
    border-bottom 1px solid #e4e4e4
    float left
    width 100%
  .rowName, .rowValue
    width 50%
    float left
    word-wrap break-word

.popup
  .listing
    &__container
      @extend .custom-scrollbar
      overflow auto
      margin 0
      max-height 60vh
      &:before
      &:after
        content none

.scrollarea-content
  overflow visible !important
