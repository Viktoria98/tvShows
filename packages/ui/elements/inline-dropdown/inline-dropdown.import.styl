.cell.indexingPriority .expander
  display none

.cell.indexingPriority .content.-wrapper
  width 100%

.dropdown-base
  //position relative
  cursor pointer
  &__btn
    height 21px // without height empty btn would collapse, should be customizible TODO consider
    position relative
    padding-right 18px
    // we have specific paggins for btn with chevron, and we don't need them without chevron
    &--no-chevron
      padding-right 0
  &__btn-text
    overflow hidden
    text-overflow ellipsis
    // for links inside btn, mostly in dropdowntextarea
    a
      color #1d81e2
      text-decoration none
  &__chevron-icon
    position absolute
    top 50%
    right 5px
    width 9px
    height 8px
    transform translateY(-50%)
  &__options-container
    display none
    position absolute
    width 100%
    //top 150%
    z-index 100
    width 200px
    margin 0
    padding 3px 0
    box-sizing border-box
    list-style none
    background-color #f3f3f7
    border 1px solid lightgrey
    border-radius 5px
    box-shadow -1px 3px 16px -6px #000
  &__container-pointer
      width 20px
      height 9px
      position absolute
      top -9px
      pointer-events none
      &.-arrow-down
        top auto
        bottom -9px
        transform rotate(180deg)
  &__option
    display flex
    height 26px
    justify-content space-between
    align-items center
    min-height 21px
    position relative
    overflow hidden
    padding 0 10px
    text-overflow ellipsis
    color #353535
    &:hover
      background-color #1ba2e3
      color #ffffff
    &.-selected
      fill #1ba2e3
      &:hover
        fill #ffffff
    &.-hovered
      background-color #1ba2e3
      color #fff
      fill #fff
    .option__additional-text
      color #ccc
      margin-left 5px
  // styles for opened dropdown
  &.-open
    .dropdown-base__options-container
      display block
    .dropdown-base__chevron-icon
      transform translateY(-50%) rotate(180deg)
    .dropdown-base__options
      list-style none
      margin 0
      padding 0
      overflow-y auto
      
