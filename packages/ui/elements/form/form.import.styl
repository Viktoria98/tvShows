.form
  &__group
    display block
    margin-bottom 20px
    &.form__checkbox
      line-height 30px
      .checkbox
        line-height 16px
  &__label
    display block
    margin-bottom 7px
    &.-required:after
      content " *"
      color: red
    &__link
      label
        float left
      a
        float right
  &__input
    position relative
    width 100%
    top -2px
    height: 38px
    line-height 17px
    padding 9px 14px 10px
    border $border
    border-radius $border-radius
    box-shadow: inset 0 1px 2px $black-shadow
    &__hint
        color #696969
        margin-top 0
        &.right
          text-align right
  &__error
    display none
    color $red
    margin 3px 0 0 0
    font-size 13px
    &.-visible
      display block
  &_checkbox
    .checkbox input[type="checkbox"] + label:before
      top 3px
      left 0
  .-error
    border-color $red

textarea.form__input
  height 170px
  resize none
