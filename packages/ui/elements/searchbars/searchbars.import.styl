.searchbar
  position relative
  float left
  &__input
    width 200px
    height $input-height
    padding 0 30px 0 16px
    border $border
    border-radius 18px
    box-shadow: inset 0 1px 1px 0 $black-shadow
    font-size 14px
    font-family 'Helvetica', 'Arial', sans-serif
    &:focus
      outline none
  &__button
    display none
    position absolute
    height 100%
    right 0
    top 0
    border none
    outline none
    background transparent
    color $brand-color
    font-weight bold
    cursor pointer
    &.-visible
      display block

.-error
  .react-autosuggest
    &__container
      .react-autosuggest__input
        border-color $red

.-error
  .react-autosuggest
    &__container
      .react-autosuggest__input
        border-color $red

// react autosuggest plugin
.react-autosuggest
  &__container
    position relative
    z-index 4
    .react-autosuggest__suggestions-container
      .react-autosuggest__footer
        span
          width: auto
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
      display none
    &--open
      .react-autosuggest__suggestions-container
        display block
      .react-autosuggest__input
        border-color $brand-color
  &__input
    @extend .searchbar__input
  &__suggestions-container
    position absolute
    width 270px
    background white
    margin-top 15px
    border 1px solid #ccc
    border-radius 6px
    overflow hidden
    -moz-box-shadow 0 0px 6px 0 rgba(0,0,0,0.1)
    -webkit-box-shadow 0 0px 6px 0 rgba(0,0,0,0.1)
    box-shadow 0 0px 6px 0 rgba(0,0,0,0.1)
    z-index 4
  &__section-container
    border-bottom 1px solid #cecece
  &__section-title
    .searchbarTrigger
      position relative
      display block
      padding-left 40px
      padding-right 20px
      line-height 50px
      background-color #fafafa
      border-bottom 1px solid #f3f3f3
      color #4480f7
      cursor pointer
      &:before
        content ''
        display block
        position absolute
        transform translateY(-50%)
        top 50%
        left 20px
        width 0
        height 0
        border-style solid
        border-width 7px 0 7px 8px
        border-color transparent transparent transparent #4480f7
      &.-active
        &:before
          border-width 8px 7px 0 7px
          border-color #4480f7 transparent transparent transparent
      .searchbarAllbtn
        float right
        font-weight normal
        font-size 13px
    .searchbarLoading
      padding 10px 20px
      .spinner
        @extend .rotate360
        display block
        float left
        width 16px
        height 16px
        margin-right 10px
        background-image url('/packages/ff_ui/assets/images/spinner.png')
        background-size contain
  // &__section-suggestions-container
  &__suggestions-list
    @extend .custom-scrollbar
    max-height 200px
    width 96%
    overflow-y auto
    overflow-x hidden
  &__suggestion
    cursor pointer
    &:hover
      background-color $brand-color
      color white
    .link
      padding 10px 0
      border-bottom 1px solid #ccc
    .item
      position relative
      line-height 36px
      padding 0 15px
      .name
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
      .value
        font-size 13px
        color #ccc
