.inline-field
  text-overflow ellipsis
  overflow hidden
  height 100%

  &__input
    font inherit
    outline none
    resize none
    position absolute
    top -1px
    left 1px
    border 2px solid rgb(27, 162, 227)
    overflow hidden
    width: 600px
    min-width 400px
    height: 22px
    max-height 600px
    z-index 100
    padding 0 3px
    box-sizing border-box
    line-height 20px

  &__text
    user-select none

/* TODO: dont hide expander */
.cell.indexingExternalComments .expander
  display none

.cell.indexingExternalComments .content.-wrapper
  width 100%
