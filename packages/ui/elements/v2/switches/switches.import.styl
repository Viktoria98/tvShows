.switch
  &__container
    display inline-flex
    justify-content flex-start
    align-items center
    &.-enabled
      padding-bottom 0px !important
      .switch__toggler
        background-color $switch-enabled
      .switch__button
        left 38px
      .switch__label
        color black
  &__toggler
    width 72px
    height 36px
    border-radius 18px
    background-color $switch-disabled
    position relative
    transition(background-color .2s ease)
    margin-right 17px
    cursor pointer
    &:before
    &:after
      display block
      position absolute
      color white
      font-weight bold
      font-size 14px
      top 10px
      z-index 3
    &:before
      content 'On'
      left 10px
    &:after
      content 'Off'
      right 10px
  &__button
    width 32px
    height 32px
    border-radius 50%
    position absolute
    top 2px
    left 2px
    z-index 4
    background-color white
    cursor pointer
    transition(left .2s ease)
  &__label
    transition(color .2s ease)
    color #bbbbbb
  &__container
  &.-small
    padding-bottom 3px
    .switch__toggler
      width 28px
      height 16px
      background-color #ffffff
      border solid 1px #eaeaea
      margin-right 6px
      &:before
        content ''
        left 0px
      &:after
        content ''
        right 0px
    &.-enabled
      .switch__toggler
        background-color #08d66f
        border none
      .switch__button
        top 1px
        left 13px
    .switch__button
      width 14px
      height 14px
      top 0px
      left 0px
      box-shadow 0 0.5px 1px 0 rgba(0, 0, 0, 0.5)
  &__icon
    width 32px
    cursor pointer
    .icon
      width 100%
      height 100%
      g
        fill #696969
        stroke #696969
    &.-enabled
      .icon g
        fill #0B83E3
        stroke #0B83E3
        &:hover g
          fill #0B83E3
          stroke #0B83E3
    &.-small
      width 16px
      height 16px
