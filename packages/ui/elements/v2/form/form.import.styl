.radio__group
  height: 36px;
  &.-justified
    width 100%
    display table
    table-layout fixed
    label
      display table-cell
      span
        width 100%
  &.-error
    label span
      border-color $red !important
  label
    .radio-item
      position relative
      &__width-placeholder
        opacity 0
      &__text
        position absolute
        top 0
        left 50%
        transform translateX(-50%)
        font-style normal
    span
      padding 0 15px
      width auto
      display block
      float left
      height $button-height
      line-height $button-height
      text-align center
      font-family 'Helvetica', 'Arial', sans-serif
      color $gray-dark
      background $gray-lightest
      border $border
      border-right none
      cursor pointer
      box-shadow 0 2px 2px $black-shadow
    &:first-child span
      border-radius $border-radius 0 0 $border-radius
    &:last-child span
      border-radius 0 $border-radius $border-radius 0
      border-right $border
    input
      display none
    &.-selected
      span
        background $white
        font-weight bold
        color #222

.form__element
  float left
  width 100%
  margin-bottom 12px
  label
    display block
    float left
    width 130px
    text-align right
    padding-right 15px
    line-height 30px
  .container
    position relative
    float left
    width calc(100% - 130px)
  input
    height 30px
    width 100%
    padding 9px
    border-radius 4px
    border 1px solid #d8dde6
    font-size 14px
    cursor pointer
    &::-webkit-input-placeholder
      color #a2afc5
    &:focus
      outline-style none
      border-color #0070d2
    &.--nonEmpty
      border-bottom-right-radius 0
      border-bottom-left-radius 0
    &[readOnly]
      color #545454
      &:focus
        border-color #d8dde6
    &.-disabled
      color $gray-light
      cursor not-allowed
  .input__hint
    font-size 11px
    position absolute
    right 10px
    top 9px
    color #a2afc5

.form__dropdown
  position relative
  &.--active
    .options
      z-index 2
  &:after
    content ''
    position absolute
    width 5px
    height 5px
    border-bottom 1px solid #a9b2c4
    border-right 1px solid #a9b2c4
    transform rotate(45deg)
    right 9px
    top 10px
  &.-hidden
    display none

  .input__hint
    right 25px
  .options
    z-index 1
    position fixed
    background-color white
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
    border-radius 4px
    padding 5px 0
    margin-top 5px
    &__item
      line-height 30px
      padding 0 20px
      font-size 14px
      cursor pointer
      &.-disabled
        color $gray-light
        cursor not-allowed
      .item__hint
        font-size 11px
        position absolute
        right 25px
        color #a2afc5

// autocomplete
.form__autosuggest
  display block
  .suggestions
    z-index 2
    position fixed
    background-color white
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
    border-radius 4px
    padding 5px 0
    margin-top 5px
    &__types
      height 35px
      border-bottom 1px solid #e0e5ee
      padding 7px 20px 0 20px
    &__type
      padding-right 25px
      cursor pointer
      &.--active
        color #0070d2
    &__item
      position relative
      line-height 30px
      padding 0 20px
      font-size 14px
      cursor pointer
      &.--selected
        color #0070d2
      &.--selected:before
        position absolute
        left 5px
        top 0
        content "\2713"
      &.disabled
        cursor default
      .item__hint
        font-size 11px
        position absolute
        right 25px
        color #a2afc5
  .v2-autocomplete
    margin-bottom 0 !important
    input
      height 30px
      width 100%
      padding 9px
      border-radius 4px
      border 1px solid #d8dde6
      font-size 14px
      cursor pointer
      &::-webkit-input-placeholder
        color #a2afc5

// form datepicker
.form__element
  .input__reset
    position absolute
    top calc(50% - 7px)
    right 13px
    width 15px
    height 15px
    background white
    cursor pointer
    &:before,
    &:after
      content ""
      width 2px
      height 15px
      position absolute
      top 0
      left 6px
      background #1e7de5
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
    &.--inactive
      display none
  .rangeDatepicker
    position fixed
    z-index 9
    background-color white

// input with dropdown
.form__element
  .input__switch
    width 165px
    line-height 30px
    padding-left 10px
    position absolute
    border none
    background transparent
    cursor pointer
    z-index 1
    &.--active
      z-index 2
    &.--active:after
      border-color #0070d2
    &.-disabled
      background-color #ebebe4
    &:before
      content ''
      position absolute
      height 22px
      right 0
      top 4px
      width 1px
      background #d8dde6
    &:after
      content ''
      position absolute
      width 5px
      height 5px
      border-bottom 1px solid #a9b2c4
      border-right 1px solid #a9b2c4
      transform rotate(45deg)
      right 8px
      top 10px
  .switch__options
    z-index 1
    position absolute
    background-color white
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, 0.15)
    border-radius 4px
    padding 5px 0
    margin-top 5px
    margin-left -10px
    .options__item
      white-space: nowrap
      line-height 30px
      padding 0 20px
      font-size 14px
      cursor pointer
  .input__action
    padding-left 170px
.form__switchInput
  &.--reversed
    .input__switch
      right 0
      &:before
        left 0
    .input__action
      padding-left 10px
      padding-right 170px
    .input__hint
      right 175px
  .input__hint
    right 10px


// input with table
.form__element
  .results
    &__container
      display block
    &__item
      height 23px
      line-height 23px
      border 1px solid #d8dde6
      border-top none
      padding 0 9px
      color #1a1a1a
      &:nth-child(2n)
        background-color white
      &:last-child
        border-radius 0 0 3px 3px
    &__groupName
      font-weight bold
  .closer
    width 23px
    height 23px
    position relative
    cursor pointer
    float right
    &:before,
    &:after
      content ""
      width 15px
      height 2px
      position absolute
      top 9px
      left 3px
      background #cccccc
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)
