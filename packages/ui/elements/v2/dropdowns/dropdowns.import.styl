// v2
// base
.dropdown
  display inline-block
  position relative
  font-size 14px
  &__button
    @extend .button
    font-size 14px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    width 200px
    padding-right 30px
    text-align left
    &.-disabled
      cursor auto
      color $gray-light
    &.-open
      border solid 1px $open-dropdown-border
      box-shadow 0 2px 0 0 bs = $open-dropdown-shadow
      g
        fill $icon-hovered
      &:before
        border-color bs transparent transparent transparent
    &:before
      @extend .center--y
      @extend .arrow-down
      content ' '
      right 10px
  &__close
    display none
    position fixed
    margin-left -100vw
    margin-top -100vh
    width 200vw
    height 200vh
    z-index 99
    &.-visible
      display block
  &__container
    display none
    position absolute
    overflow hidden
    min-width 100%
    top 0
    background $white
    border $border
    border-radius $border-radius
    z-index 99
    padding 5px 0
    &.-visible
      display block
      box-shadow(0 2px 8px 0 rgba(0, 0, 0, 0.25))
    &.-right
      right 0
  &__scroll
    @extend .custom-scrollbar
    overflow-y auto
  &__input
    position absolute
    opacity 0
    left 0
    z-index -1

// dropdown item
.dropdown__list__item
  position relative
  height auto
  padding 9px 50px 9px 15px
  color $gray-dark
  white-space nowrap
  overflow hidden
  text-overflow ellipsis
  cursor pointer
  &:hover
    background $brand-color
    color white
  &.-disabled
    color $gray-light
    cursor auto
    &:hover
      color $gray-light
      background-color transparent
  &.-active
    font-weight bold
    color $brand-color
    padding-right 40px
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    &:hover
      color white
    &:after
      content ' '
      position absolute
      z-index 10
      width 15px
      height 15px
      right 10px
      top 6px
      background-image url('/packages/ff_ui/assets/images/check.svg')
      background-repeat no-repeat
      background-position center
      background-size contain
    &:hover:after
      background-image url('/packages/ff_ui/assets/images/check-white.svg')

// select dropdown
.dropdown.select
  .dropdown
    &__container
      padding-right 5px
// multiselect dropdown
.dropdown.multiselect
  .dropdown
    &__container
      padding-right 10px
    &__list
      &__group
        &:not(:last-child)
          @extend .divider
          padding-bottom 5px
          margin-bottom 5px
      &__item
        position relative
        height 34px
        padding 9px 50px 9px 14px
        color $gray-dark
        white-space nowrap
        overflow hidden
        &.-disabled
          color $gray-light
          &:hover
            color $gray-light
            background-color transparent
        &.-active
          font-weight bold
          color $brand-color
          padding-right 40px
          text-overflow ellipsis
          white-space nowrap
          overflow hidden
          &:before
            content ' '
            position absolute
            width 15px
            height 15px
            right 10px
            top 6px
            background-image url('/packages/ff_ui/assets/images/check.svg')
            background-repeat no-repeat
            background-position center
            background-size contain
          &:hover:before
            background-image url('/packages/ff_ui/assets/images/check-white.svg')
        &:hover
          background $brand-color
          color white
          cursor pointer
        &__counter
          color #c3c3c3
          font-size 13px
          .fake
            margin-left 20px
            opacity 0
          .real
            position absolute
            right 40px
// datepicker
.dropdown.datepicker
  .dropdown
    &__container
      padding 0
      top 50px
      overflow visible
      &:before
        content ''
        display block
        position absolute
        width 10px
        height 10px
        right 30px
        top -6px
        background-color white
        border 1px solid #ccc
        border-bottom-color transparent
        border-left-color transparent
        -ms-transform rotate(-45deg)
        -webkit-transform rotate(-45deg)
        -webkit-transform rotate(-45deg)
        -moz-transform rotate(-45deg)
        transform rotate(-45deg)
      .rangeDatepicker
        border 0
    &__button
      width: auto
// inline (link) dropdown
.dropdown.inline
  display inline-block
  width auto
  .dropdown
    &__button
      display inline
      padding 0
      border none
      box-shadow none
      background-color transparent
      height auto
      line-height 1.2em
      width auto
      position relative
      overflow visible
      transition(color .2s ease)
      text-decoration underline
      &:before
        right -10px
// filter
.dropdown.filter
  .dropdown__container
    max-width 430px

//filterDropdown
.dropdown__filter
  button
    &:before
      display block
    .icon
      width 13px
      height 13px
      margin-right 6px
    &.-opened
      color $brand-color
      border-color $brand-color
      path
        fill $brand-color
    &.-has-active-filter
      path
        fill $brand-color
      &:before
        border-top-color $brand-color
  .dropdown__container
    width 305px
    overflow visible
    top 50px
    left -20px
    padding-top 10px
    &:before
      content ''
      display block
      position absolute
      width 10px
      height 10px
      left 30px
      top -6px
      background-color white
      border 1px solid #ccc
      border-bottom-color transparent
      border-left-color transparent
      -ms-transform rotate(-45deg)
      -webkit-transform rotate(-45deg)
      -webkit-transform rotate(-45deg)
      -moz-transform rotate(-45deg)
      transform rotate(-45deg)
    .dropdown__submenu
      display flex
      position relative
      overflow visible
      height auto
      &:after
        content ""
        display block
        position absolute
        top 13px
        right 15px
        border 4px solid transparent
        border-left 4px solid #696969
        opacity 0.5
      .submenu__title
        color #747474
      .submenu__checkeditems
        padding-left 10px
        text-overflow ellipsis;
        white-space nowrap;
        overflow hidden;
        color #c5c8d0
      .submenu__reset
        display none
        position absolute
        top 10px
        right 30px
        svg
          height 12px
          width 12px
          g
            fill white
        &.-active
          display block
      &.-disabled
      &.-disabled:hover
        cursor auto
        color $gray-light
        .submenu__title
          color $gray-light
        .submenu__checkeditems
          color $gray-lighter
        .submenu__reset
          svg
            g
              fill $gray-light
          &:hover
          svg
            ellipse
              fill $gray-light
            g
              fill white
        &:after
          border-left 5px solid $gray-light
      &__items
        position fixed
        top -100vh
        left -100vw
        overflow-y auto
        max-height calc(100vh - 15px)
        @extend .custom-scrollbar
        background-color white
        border $border
        border-radius $border-radius
        box-shadow(0 2px 8px 0 rgba(0, 0, 0, 0.25))
      &.-expanded
        .dropdown__submenu__items
          display block
      &:hover
        &:after
          border-left 5px solid white
        .submenu__title
          color white
        .submenu__reset
          svg
            ellipse
              fill white
            g
              fill $icon-hovered
      .dropdown__list__item
        &.-active
          padding-right 50px
          &:after
            top 8px
        .dropdown__list__item__count
          float right
          color #c3c3c3
          font-size 13px
          line-height 17px
          font-weight normal
          margin-left 25px
    .dropdown__filter__entities
      .dropdown__submenu
        flex-direction column
        &:after
          top 50%
          transform translateY(-50%)
        &:hover
          .submenu__title
            color white
        .submenu__title
          color $brand-color
        .submenu__reset
          top 50%
          transform translateY(-50%)
          height 14px
