.icon
  width 20px
  height 20px
  g
    fill $icon-base
    transition(all .2s ease)
  &:hover g
    fill $icon-hovered
  &.-notification g
    fill white
    g
      stroke $icon-base
    &:hover g
      fill white
      stroke $icon-hovered
  &.-star
    &:hover g
      stroke $icon-hovered
  &.-small
    width 12px
    height 12px
  &.-medium
    width 24px
    height 24px
  &.-contain
    width 100%
    height 100%
  &.-share
    g
      fill none
      stroke-width 4
      &:hover
        stroke $icon-hovered
        fill none
  &.-filters
    height 18px      

