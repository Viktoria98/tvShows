.auth
  @extend .center--xy
  position absolute
  width 362px
  font-size 16px
  .logo
    width 100%
    height 43px
    background-image url('/packages/ff_ui/assets/images/logo.svg')
    background-size contain
    background-position center
    background-repeat no-repeat
    margin-bottom 15px
    text-align center
  .name
    text-align center
    text-transform uppercase
    color rgba(0,0,0,0.47)
    margin 0 0 22px 0
    font-family "gotham-medium"
  .divider
    margin-bottom 37px
  .or-divider
    position relative
    display flex
    justify-content center
    font-family 'whitney-semibold'
    font-weight 500
    color #696969
    margin-bottom 28px
    &::after
      content ""
      position absolute
      top 9px
      left 210px
      width 80px
      height 1px
      background-color #cccccc
    &::before
      content ""
      position absolute
      top 9px
      left 71px
      width 80px
      height 1px
      background-color #cccccc
  .abcRioButton
    background-color #fafafa
    border solid 1px #cccccc
    border-radius 4px
    box-shadow 0 2px 0 0 rgba(26, 26, 26, 0.15)
    text-transform uppercase
    text-align left
    color #696969
    font-size 16px
    &Contents
      margin-left 67px
      font-family 'whitney-semibold'
      letter-spacing 0
    &Icon
      position relative
    &IconImage
      position absolute
      top 13px
      left 20px
    &IconImage svg
      width 24px
      height 24px
  .form
    &.-visible
      display block
    &__group
      margin-bottom 0
    &__input
      top 0
      height 52px
      font-size 16px
      margin-bottom 24px
      padding 15px 15px
      box-shadow inset 0 1px 2px 0 rgba(0, 0, 0, 0.15)
      color rgba(0,0,0,0.20)
      &:focus
        color rgba(0,0,0,0.90)
        border-color #1f7ce4
        border-radius 4px
        box-shadow inset 0 1px 2px 0 rgba(68, 128, 247, 0.5)
        outline none
        &::-webkit-input-placeholder
          color rgba(0,0,0,0.90)
        &::-moz-placeholder
          color rgba(0,0,0,0.90)
        &:-moz-placeholder
          color rgba(0,0,0,0.90)
        &:-ms-input-placeholder
          color rgba(0,0,0,0.90)
      &::-webkit-input-placeholder
        color rgba(0,0,0,0.20)
      &::-moz-placeholder
        color rgba(0,0,0,0.20)
      &:-moz-placeholder
        color rgba(0,0,0,0.20)
      &:-ms-input-placeholder
        color rgba(0,0,0,0.20)
    &__row
      display flex
      justify-content space-between
      margin-bottom 27px
  .remember
    margin-top -3px
    .checkbox
      .label
        color rgba(0,0,0,0.47)
        margin-left 11px
      .icon g
        fill $icon-hovered
    .terms
      position absolute
      left 113px
      top 3px
      white-space nowrap
      color #878787
      text-decoration underline
  .tooltip
    &.-phone
      background-color rgba(0,0,0,0.8)
      height 90px
      width 330px
      top 345px
      left 365px
      padding 15px 0 0 18px
      &.-visible
        left 375px
      &:after
        right 100%
        top 50%
        border solid transparent
        content " "
        height 0
        width 0
        position absolute
        border-color transparent
        border-right-color rgba(0,0,0,0.8)
        border-width 10px
        margin-top -10px
      span
        color white
        font-size 16px
        letter-spacing -0.4px
        line-height 20px
    border-radius $border-radius
    position absolute
    transition(left .2s ease)
    trasition(opacity .2s ease)
    visibility hidden
    opacity 0
    &.-visible
      visibility visible
      opacity 1

  .button
    width 100%
    height 50px
    margin-bottom 30px
    font-size 16px
    &.submit
      background-color #1d81e2
      margin-bottom 40px
      font-family "whitney-semibold"
      box-shadow 0 2px 0 0 rgba(22, 98, 173, 0.45)
      border-radius 5px
    &.-ghost
      color #777777
      border-color #e0e0e0
      font-weight 400
  p
    font-size 16px
    line-height 28px
    color $gray-dark
    margin 0 0 10px 0
  .accType
    width 360px
    margin-bottom 30px
    &__type
      width 360px
      height 80px
      border 1px solid $gray
      border-radius $border-radius
      padding 9px 9px 9px 19px
      cursor pointer
      p
        margin 0
        font-size 13px
        line-height 19px
        color $gray-dark
      h3
        margin 0
        font-size 18px
        letter-spacing 0.3px
        color #222222
      &:not(:last-of-type)
        margin-bottom 15px
      &__icon
        float left
        margin-right 25px
      &.-checked
        border 2px solid $acc-type-checked
        padding 8px 8px 8px 18px
        h3
          color $acc-type-checked
        svg .svg-body
          fill $acc-type-checked
.accounts-dialog
  width 400px
  padding 30px 40px
  text-align center
  margin-left -200px
  margin-top -120px
  label
    display inline-block
    text-transform uppercase
    font-weight bold
    color $gray-dark
    margin-bottom 30px
  .reset-password-new-password-wrapper
    input
      height 50px !important
      margin-bottom 10px
  .login-button
    padding 0
    line-height 50px !important
    &:hover
      background $brand-color
  .accounts-close
    top 5px
    right 10px
