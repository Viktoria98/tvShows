.rangeDatepicker
  width: 380px
  margin-bottom 0
  border 1px solid #cccccc
  border-radius 4px
  &.-dual
    width 640px
  &.-input
    width auto
    border none
    .rangeDatepicker__calendar
      position relative
      border 1px solid #ccc
      z-index 99
    .closer
      position fixed
      margin-left -100vw
      margin-top -100vh
      width 200vw
      height 200vh
      z-index 98
  &__ranges
    background-color #fafafa
    width 100%
    padding 0 30px
    border-top $border
    border-bottom $border
    display flex
    justify-content center
    li
      display inline-block
      line-height 50px
      padding 0 18px
      cursor pointer
      &.-active
        font-weight bold
        position relative
        &:after
          content ''
          display block
          position absolute
          width 10px
          height 10px
          background-color #fafafa
          border $border
          border-top-color transparent
          border-right-color transparent
          -ms-transform rotate(-45deg)
          -webkit-transform rotate(-45deg)
          transform rotate(-45deg)
          bottom -6px
          left 50%
          margin-left -6px
  &__calendars
    padding 30px
  &__header
    border-bottom 1px solid #E6E6E6
    padding 15px 20px
    &__item
      display inline-block
      padding 2px 10px
      background #e7f2ff
      color $brand-color
      margin-right 20px
      border-radius 4px
      cursor pointer
      &.-active
        background-color $brand-color
        color white
  &__dates
    border-bottom 1px solid #E6E6E6
    padding 15px 20px
    overflow hidden
    &__date
      width 50%
      float left
      &__heading
        text-transform uppercase
        font-size 9px
        color #999999
      &__reminder
        color #999999
        margin-top 3px
      &__decimal
        display inline-block
        font-size 31px
        letter-spacing 0.35px
        margin-right 8px
      &__text
        display inline-block
      &__month
        color #999999
        margin 0
      &__day
        font-size 10px
        color #bbbbbb
        margin 0
      &.-end
        position relative
        padding-left 10px
        &:before
          content ''
          display block
          position absolute
          width: 0
          height 0
          left -10px
          top 28px
          border-style solid
          border-width 5px 0 5px 7px
          border-color transparent transparent transparent #aaa
  &__calendar
    .DateRangePicker
      margin 0

.datepicker
  .dropdown
    width auto !important
    margin-right 15px
    .dropdown__button
      width 100% !important

.DateRangePicker__MonthHeaderSelect
  background $white
  option:hover
    background $brand-color
    color $white
