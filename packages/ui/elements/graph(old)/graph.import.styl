.graphContainer
  width 100%
  float left
  padding 20px
  border-radius $border-radius
  border $border
  box-shadow inset 0 2px 2px $black-shadow
  margin-bottom 50px

.mainGraphContainer
  position relative
  
.graph
  path.area
    fill url(#gradient)
  path.line
    fill none
    stroke #53aee2
    stroke-width 2
  .axis
    shape-rendering crispEdges
  .x.axis path
    display none
  .y.axis path, .y.axis line
    fill none
    stroke $black
    stroke-width 1px
    stroke-opacity 0.06
  .domain
    display none
  .tick
    z-index 5
    line
      display none
    text
      text-transform uppercase
  circle
    opacity 0
    fill $brand-color
    stroke alpha($brand-color, 0.2)
    stroke-width 8
    r 5
  text
    stroke none
    fill $gray
    font-family "HelveticaNeue", Helvetica, Arial, sans-serif
    font-size 13px
  .line.horizontal
    stroke $black
    stroke-opacity 0.06

.mainGraphContainer
  .tooltip
    position absolute
    opacity 0
    font-size 14px
    color $black
    &__holder
      position relative
      padding 10px
      background white
      border 1px solid #dadada
      border-radius 4px
      pointer-events none
      left -50%
    &__date
      font-size 13px
    &__value
      white-space nowrap
    &.-visible
      transition opacity .3s ease-out
      opacity 1
    
.graphArea
  float left
  width 60%
  height 620px
  .statsContainer
    position relative
    height 320px
  .stat
    width 33.33%
    height 160px
    float left
    padding 20px
    border-radius $border-radius
    cursor pointer
    border $border
    border-color transparent
    &:hover
      border-color $gray
      box-shadow 0 2px 2px $black-shadow
    &__name
      font-family 'gotham-medium'
      text-transform uppercase
      font-size 12px
      margin-bottom 15px
    &__value
      font-size 24px
      display inline-block
      margin-right 10px
      margin-bottom 10px
    &__dynamics
      display inline-block
      font-size 16px
      font-weight bold
      margin-bottom 10px
      &.down
        color $red
        &:before
          content ''
          display inline-block
          width 12px
          height 12px
          background-image url(/packages/ff_ui/assets/images/arrow-down.png)
          margin-right 5px
      &.up
        color $green
        &:before
          content ''
          display inline-block
          width 12px
          height 12px
          background-image url(/packages/ff_ui/assets/images/arrow-up.png)
          margin-right 5px
    svg
      max-width 100%
      
.statsArea
  float left
  width 30%
  height 620px
  padding-left 40px
  .stats
    position relative
    height 100%
    padding-right 20px
  .stat
    margin-bottom 40px
    &__name
      font-family 'gotham-medium'
      text-transform uppercase
      font-size 12px
      margin-bottom 10px
    &__info
      width 100%
      line-height 30px
      border-bottom $border
      overflow hidden
      font-size 13px
      &:last-of-type
        border none
        margin-bottom 10px
      &__name
        float left
        color $gray-dark
      &__value
        float right
        font-weight bold
    &__button
      width 100%