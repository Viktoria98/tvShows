.loading
  display none
  position absolute
  width 100%
  line-height 50px
  text-align center
  bottom 20px
  left 0
  &.-visible
    display inline-block
  span
    position relative
    padding 10px 15px
    background rgba(255,255,255,.9)
    border-radius $border-radius
    border $border
    &:before
      @extend .rotate360
      content: ''
      display inline-block
      position relative
      top 2px
      width 16px
      height 16px
      margin-right 10px
      background url(/images/spinner.png)
      background-size contain

.notification
  @extend .center--x
  display none
  position fixed
  padding 10px 20px
  top 50px
  line-height 14px
  font-size 12px
  font-family Helvetica
  font-weight 700
  color $notif-main
  letter-spacing 0.2px
  background-color $notif-pale
  border 1px solid $notif-main
  border-radius $border-radius
  z-index 999
  &.-visible
    display block
  &.-alert, .-error
    background-color $notif-a-pale
    border-color $notif-a-main
    color $notif-a-main
  &.-info
    background-color $notif-i-pale
    border-color $notif-i-main
    color $notif-i-main
  &.-success
    background-color $notif-s-pale
    border-color $notif-s-main
    color $notif-s-main
