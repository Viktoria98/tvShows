.controls
  margin-bottom 15px
  &:after
    content ' '
    display block
    clear both
  .pull-left
    max-width 70%
    > *
      margin-right 10px
      margin-bottom 10px
      float left
  .pull-right
    > *
      margin-left 5px
      margin-bottom 10px
      float left
  .search-input
    width 600px
  .v2-autocomplete
    margin-right 0
    .react-autosuggest__input
      border-radius 18px 0 0 18px
  .dropdown__filter
    .dropdown__button
      width auto
      min-width initial
      box-shadow none
      border-left none
      border-radius 0 18px 18px 0
      padding-left 10px
      padding-right 10px
      &.-opened
        border-left 1px solid
        left -1px
      &:before
        display none
  .filters-trigger
    display none
    margin 0 auto
    &.-visible
      display inline
