.navigation
  float left
  width 100%
  padding 20px 0
  padding-bottom 32px
  font-family 'gotham-medium'
  font-size 12px
  > *
    max-height 25px
  &__logo
    display block
    float left
    margin-right 25px
    a img
      max-height 25px
  &__menu
    display block
    float left
    &__item
      float left
      margin-right 10px
      line-height 25px
      text-transform uppercase
      a.-icon
        position relative
        &:hover
          background transparent
      &.-active a
        color black
    &__link
    .dropdown__link
      display inline-block
      color $gray-dark
      padding 0 10px
      border-radius $border-radius
      height: 25px
      &:hover
        background-color $gray-light
    .dropdown
      &__link
        padding-right 20px
        &:after
          right 5px
          top 45%
      &__list
        top 30px
  &__actions
    display flex
    float right
    .dropdown
      &__link
        text-transform uppercase
        display inline-block
        color $gray-dark
        padding 0 20px 0 10px
        border-radius $border-radius
        height: 25px
        &:hover
          background-color $gray-light
        &:after
          right 5px
          top 45%
      &__list
        min-width 100px
        top 36.5px
        right -23px
        overflow visible
        overflow-x visible
        padding-top 4px
        &.-visible
          box-shadow none
        &__item
          white-space nowrap
          font-family 'Helvetica', 'Arial', sans-serif
          line-height 2.29
          padding 0px 20px 0px 16px
          &:last-of-type
            height 31px
        &:before
          content ""
          display block
          width 12px
          height 12px
          border inherit
          border-radius 5px 0 0 0
          background inherit
          position absolute
          top -7px
          right 24px
          border-right none
          border-bottom none
          transform rotate(45deg)

  .dropdown a
    color $gray-dark
    line-height 25px
    font-size 12px
    text-transform uppercase
    &:after
      border-top-color #b4b8b8

  widget
    padding-right 5px
    .-bell
      width 24px !important
      height 24px !important
      &.-bell g
        fill white
        g
          stroke #2985E6
          fill #F2FAFD
    #HW_badge_cont
      height 28px
      width 28px
      margin-top -28px
    #HW_badge
      left 12px
      top -2px
      background #fa3e3e
      border-radius 2px
      padding: 1px 3px
      min-height 13px
      height auto
      width auto
      line-height 13px
      font-size 10px
      font-family sans-serif
      &.HW_softHidden
        opacity 0
    &:hover
      .-bell g
        fill white
        g
          stroke #2985E6
          fill #F2FAFD
