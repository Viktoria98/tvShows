.icon
  display inline-block
  &.-small
    height 12px
    width 12px
  &.-edit
    background-image url("/packages/ff_ui/assets/images/stylus.svg")
    background-position center center
    background-size 100%
    background-repeat no-repeat
    &:hover
      background-image url("/packages/ff_ui/assets/images/stylus-hovered.svg")
  &.-delete
    background-image url("/packages/ff_ui/assets/images/basket.svg")
    background-position center center
    background-size contain
    background-repeat no-repeat
    &:hover
      background-image url("/packages/ff_ui/assets/images/basket-hovered.svg")
  &.-stylus
    background-image url("/packages/ff_ui/assets/images/stylus-white.svg")
    background-repeat no-repeat
    background-size 20px 20px
    background-position center
  &.-wrench
    background-image url("/packages/ff_ui/assets/images/wrench.svg")
    background-repeat no-repeat
    background-size 20px 20px
    background-position center
    &:hover
      background-image url("/packages/ff_ui/assets/images/wrench-hovered.svg")
  &.-star
    background-image url("/packages/ff_ui/assets/images/star.svg")
    background-repeat no-repeat
    background-size contain
    background-position center
